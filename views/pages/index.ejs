<!DOCTYPE html>
<html lang="es" class="js">

<head>
  <%- include('../static/head', {tituloSeccion: title}); %>

</head>

<body class="home page-template-default page page-id-798 custom-background et_pb_button_helper_class et_fixed_nav et_show_nav et_primary_nav_dropdown_animation_fade et_secondary_nav_dropdown_animation_fade et_header_style_left et_pb_footer_columns4 et_cover_background et_pb_gutter windows et_pb_gutters3 et_pb_pagebuilder_layout et_no_sidebar et_divi_theme et-db et_minified_js et_minified_css chrome"
      cz-shortcut-listen="true" style="overflow-x: hidden">
  <div id="page-container" style="padding-top: 104px; overflow-y: hidden; background-color: #323232">

    <header id="main-header" data-height-onload="104" data-height-loaded="true" data-fixed-height-onload="104" style="top: 0px">
      <%- include('../static/header'); %>
    </header>

    <main>

      <div id="contacto" class="et_pb_row et_pb_row_10 et_pb_row_fullwidth">
        <br />
        <br />
        <div class="et_pb_column et_pb_column_4_4 et_pb_column_43 et_pb_css_mix_blend_mode_passthrough et-last-child">
          <div class="et_pb_module et_pb_text et_pb_text_3 et_pb_text_align_left et_pb_bg_layout_dark">
            <div class="et_pb_text_inner">
              <h1 style="text-align: right; margin-right: 5%;">BUSCAR ARTICULOS</h1>
            </div>
          </div>
          <div class="et_pb_module et_pb_divider et_pb_divider_2 et_pb_space">
          </div>
        </div>
      </div>
      <!-- <br /> -->



      <!-- <div id="search-container " style="margin-left: 10px;"> -->
      <form method="post" action="/" name="home" id="search">
        <div class="field columns " style="padding: 0 15% 0 15%; margin-left: auto; margin-right: auto;">
          <div class="column is-one-fifth">

            <div class="select is-medium">

              <select name="search" disabled>
                <option value="info_articulo">Codigo</option>
                <option value="articulo">Articulo</option>
                <option value="fecha">Fecha</option>
                <option value="ubicacion">Ubicacion</option> <!-- ACA TAMBIEN VA DESPACHADO -->
                <option value="proveedor">Proveedor</option>
                <option value="destino">Destino</option>
                <option value="remito">Remito</option>
              </select>
            </div>
          </div>
          <!-- <3591> - border-color: #e6ad30; -->
          <div class="column ">
            <p class="control has-icons-left">
              <input class="input is-medium" id="valor" name="valor" type="" placeholder="" required>
            </p>
          </div>
          <div class="column is-one-fifth">
            <div class="btn_container">
              <button type="submit" class="et_pb_contact_submit et_pb_button">buscar</button>
            </div>
          </div>
        </div>
      </form>
      
      <br />
      <br />
      
      <!-- <div class="box" style="margin: 0 20% 0 30%;"> -->
        <% if(typeof(respuestas) !="undefined" ){ %>
          <table class="table table-sortable tablemanager styled-table" style="margin-left: auto; margin-right: auto;">
            <thead>
              <tr>
                <th>Codigo</th>
                <th>ID</th>
                <th>Marca</th>
                <th>Modelo</th>
                <th>Tama√±o</th>
                <th style="width: 60%;">Comentarios</th>
              </tr>
            </thead>
            <div id="lock-modal"></div>
            <div id="loading-circle"></div>
          <tbody>

            <% respuestas.forEach(function(respuesta){ %>
              <tr>
                <td>
                  <%= respuesta.codbar %>
                </td>
                <td>
                  <%= respuesta.id %>
                </td>
                <td>
                  <%= respuesta.marca %>
                </td>
                <td>
                  <%= respuesta.modelo %>
                </td>
                <td>
                  <%= respuesta.tamano %>
                </td>
                <td>
                  <%= respuesta.observaciones %>
                </td>
              </tr>
              <% }); %>
                <% } %>
          </tbody>
        </table>



        <!-- <script type="text/javascript" src="../../src/tableSorter.js" id="jquery-core-js"></script> -->


        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
        <script type="text/javascript" src="../../src/tableManager.js"></script>
        <script type="text/javascript">
          $(document).ready(function() {
            lockModal.css("display", "none");
            loadingCircle.css("display", "none");
          });
          const lockModal = $("#lock-modal");
          const loadingCircle = $("#loading-circle");
          const form = $("#search");

          form.on('submit', function (e) {
            // lock down the form
            lockModal.css("display", "block");
            loadingCircle.css("display", "block");
          });
          // basic usage
          $('.tablemanager').tablemanager({
            firstSort: [[3, 0], [2, 0], [1, 'asc']],
            disable: ["last"],
            appendFilterby: true,
            dateFormat: [[4, "mm-dd-yyyy"]],
            debug: true,
            vocabulary: {
              voc_filter_by: 'Filter By',
              voc_type_here_filter: 'Filtro...',
              voc_show_rows: 'Rows Per Page'
            },
            pagination: true,
            showrows: [20, 50, 100, 500],
            disableFilterBy: [1]
          });
          $('.tablemanager').tablemanager();
          // lockModal.css("display", "none");
          //   loadingCircle.css("display", "none");
        </script>






    </main>


    <footer>
      <%- include('../static/footer'); %>
    </footer>
  </div>
</body>

</html>