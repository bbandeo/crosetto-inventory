<!DOCTYPE html>
<html lang="es" class="js">

<head>
  <%- include('../static/head', {tituloSeccion: title}); %>
</head>

<body class="home page-template-default page page-id-798 custom-background et_pb_button_helper_class et_fixed_nav et_show_nav et_primary_nav_dropdown_animation_fade et_secondary_nav_dropdown_animation_fade et_header_style_left et_pb_footer_columns4 et_cover_background et_pb_gutter windows et_pb_gutters3 et_pb_pagebuilder_layout et_no_sidebar et_divi_theme et-db et_minified_js et_minified_css chrome" cz-shortcut-listen="true" style="overflow-x: hidden">
  <div id="page-container" style="padding-top: 104px; overflow-y: hidden; background-color: #323232">
    <header id="main-header" data-height-onload="104" data-height-loaded="true" data-fixed-height-onload="104" style="top: 0px">
      <%- include('../static/header'); %>
    </header>
    <main>
      <style>
        html,body {
          /* font-family: 'Open Sans', serif; */
          font-size: 14px;
          font-weight: 300;
        }
        body {
            background: #323232;
        }
        .hero-body {
            padding-top: 0;
        }
        .mycontainer {
            margin-top: -20px;
        }
        .hero.is-success {
          background: #323232;
        }
        .hero .nav, .hero.is-success .nav {
          -webkit-box-shadow: none;
          box-shadow: none;
        }
        .box {
          margin-top: 1rem;
        }
        input {
          font-weight: 300;
        }
        p {
          font-weight: 700;
        }
        p.subtitle {
          padding-top: 1rem;
        }
        </style>
        <% 
        var animClass = ""
        if(typeof failed != 'undefined')
          animClass = "animated shake"
        %>
        <section class="hero is-success is-fullheight">
            <div class="hero-body">
                <div class="container is-fullhd has-text-centered">
                    <div class="column is-4 is-offset-4">
                        <h3 class="title has-text-light-grey"><%=title %></h3>
                        <p class="subtitle has-text-light-grey">Ingresa tu nombre de usuario y contraseña.</p>
                        <div class="box <%=animClass %>">
                            <form action="/pass" method="post">
                                <div class="field">
                                    <div class="control">
                                        <input class="input is-large" name="uname" type="text" placeholder="Usuario" autofocus="">
                                    </div>
                                </div>
        
                                <div class="field">
                                    <div class="control">
                                        <input class="input is-large" id="pass" name="pwd" type="text" readonly placeholder="Contraseña">
                                    </div>
                                </div>
                                <button class="button is-block is-warning is-large is-fullwidth">Login</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        

    </main>
    <footer>
      <%- include('../static/footer'); %>
    </footer>
  </div>
</body>

</html>